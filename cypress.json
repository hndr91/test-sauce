{
    "baseUrl": "https://www.saucedemo.com/",
    "ignoreTestFiles": [
        "**/1-getting-started/*", 
        "**/2-advanced-examples/*"],
    "viewportHeight": 764,
    "viewportWidth": 1024,
    "chromeWebSecurity": false,
